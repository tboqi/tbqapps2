<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="de.vogella.rcp.intro.first.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="de.vogella.rcp.intro.first.Perspective"
            id="de.vogella.rcp.intro.first.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="de.vogella.rcp.intro.first.application"
            name="DeplayTest">
         <property
               name="appName"
               value="DeplayTest">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="de.vogella.rcp.intro.first.commands.category"
            name="样本类别">
      </category>
      <command
            categoryId="de.vogella.rcp.intro.first.commands.category"
            id="de.vogella.rcp.intro.first.commands.sampleCommand"
            name="样本命令">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.vogella.rcp.intro.first.handlers.SampleHandler"
            commandId="de.vogella.rcp.intro.first.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="de.vogella.rcp.intro.first.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="de.vogella.rcp.intro.first.menus.sampleMenu"
               label="样本菜单"
               mnemonic="M">
            <command
                  commandId="de.vogella.rcp.intro.first.commands.sampleCommand"
                  id="de.vogella.rcp.intro.first.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="de.vogella.rcp.intro.first.toolbars.sampleToolbar">
            <command
                  commandId="de.vogella.rcp.intro.first.commands.sampleCommand"
                  icon="icons/sample.gif"
                  id="de.vogella.rcp.intro.first.toolbars.sampleCommand"
                  tooltip="向大家问好">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="de.vogella.rcp.intro.first.MyView"
            id="de.vogella.rcp.intro.first.MyView"
            name="my view"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="de.vogella.rcp.intro.first.MyView"
               minimized="false"
               ratio="0.95f"
               relationship="left"
               relative="org.eclipse.ui.editorss">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
